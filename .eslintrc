{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": ["airbnb-base", "plugin:vue-libs/recommended", "plugin:prettier/recommended"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "settings": {
    "import/resolver": {
      "node": {},
      "webpack": {
        "config": {
          "resolve": {
            "alias": {
              "@app": "@vuepress/core/lib/client",
              "@theme": "vuepress-theme-extreme",
            }
          }
        }
      }
    }
  },
  "rules": {
    "linebreak-style": [0, "error", "windows"]
  }
}
