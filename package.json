{
  "name": "blog",
  "version": "0.0.0",
  "description": "Kisstar's personal blog",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "pkgs:changed": "lerna changed",
    "pkgs:diff": "lerna diff",
    "pkgs:list": "lerna ls -l",
    "commit": "git-cz",
    "lint:md": "markdownlint **/*.md",
    "lint:es": "eslint --cache --ext .js .",
    "lint:prettier": "prettier --check \"**/*\" --end-of-line auto",
    "prettier": "prettier -c --write \"**/*\"",
    "release": "standard-version"
  },
  "config": {
    "commitizen": {
      "path": "./lib/commit/cz-conventional-changelog.js"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "keywords": [
    "webpack",
    "vuepress",
    "blog"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:kisstar/blog.git"
  },
  "author": "kisstar <dwh.chn@foxmail.com>",
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "6.1.0",
    "eslint-config-airbnb-base": "14.0.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.8",
    "markdownlint": "^0.19.0",
    "markdownlint-cli": "^0.22.0",
    "prettier": "^1.19.1",
    "standard-version": "^7.1.0"
  },
  "license": "MIT"
}
